@model  EGH01DB.ORTContext
@{
    Layout = "~/Views/Shared/EGHLayout.cshtml";
}


@if (Model != null)
{
    @Html.Partial("_ConfirmChoiceClassificationResult", Model)
}
<div class="box main">
    <div class="boxdata">
        <div class="row">
            <div class="col-xs-4"><h3>Выбор технологий реабилитации </h3></div>
            <div class="col-xs-8">&ndash; выбор технологий и технических средств реабилитации геологической среды на основе результатов классификации ее прогнозируемого состояния.</div>
        </div>
        <div class="box main">
            <div class="boxdata">
                <div class="row">
