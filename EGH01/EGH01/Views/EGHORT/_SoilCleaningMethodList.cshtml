
@using EGH01DB.Types;
@using EGH01.Core;

@model List<SoilCleaningMethod>
@{
    Menu menu = new Menu(
                            new Menu.MenuItem("Удалить", "SoilCleaningMethod.Delete", true),
                            new Menu.MenuItem("Изменить", "SoilCleaningMethod.Update", true)
                           );

}
<table style="width:100%" id="main">

    <thead>
        <tr>
            <th> &nbsp; </th>
        </tr>
    </thead>

    <tbody>

        @foreach (SoilCleaningMethod t in @Model)
        {
            <tr>
                <td>

                    @using (Html.BeginForm("SoilCleaningMethod", "EGHORT"))
                    {

                        <div class="box">
                            <div class="boxdata">
                                <p><label class="boxdata-label-30">Код метода</label>@t.type_code.ToString()</p>
                                <input type="hidden" value="@t.type_code.ToString()" name="type_code">
                                @*<p><label class="boxdata-label-30">Наименование метода</label><span class="boxdata-span">@t.name.ToString()</span></p>*@
                                <p><label class="boxdata-label-30">Описание метода</label><span class="boxdata-span">@t.method_description.ToString()</span></p>
                            </div>
                            @Html.Partial("_TypeLineMenu", menu)
                        </div>

                    }
                </td>
            </tr>

        }
    </tbody>
</table>
<script>
$(document).ready(function() {
    $('#main').DataTable({
        "language":
datatables_lang, "pageLength":3

    } );
} );
</script>










