@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Types;
@using EGH01DB.Objects;
@model List<PenetrationDepth>
@{
    Menu menu = new Menu(
                            new Menu.MenuItem("Удалить", "PenetrationDepth.Delete", true),
                            new Menu.MenuItem("Изменить", "PenetrationDepth.Update", true)
                           );


}

<table style="width:100%" id="main">

    <thead>
        <tr>
            <th> &nbsp; </th>
        </tr>
    </thead>

    <tbody>

        @foreach (PenetrationDepth t in @Model)
        {
            <tr>
                <td>

                    @using (Html.BeginForm("PenetrationDepth", "EGHORT"))
                {

                        <div class="box">
                            <div class="boxdata">

                                <p><label class="boxdata-label-30">Код типа категории</label> @t.type_code.ToString()</p>
                                <p><label class="boxdata-label-30">Наименование категории</label> <span class="boxdata-span">@t.name</span></p>
                                <p><label class="boxdata-label-30">Диапазон глубины проникновения НП, м </label>@t.mindepth.ToString()&nbsp;-&nbsp;@t.maxdepth.ToString()&nbsp;</p>

                                <input type="hidden" value="@t.type_code.ToString()" name="id">

                            </div>
                            @Html.Partial("_TypeLineMenu", menu)
                        </div>
                    }
                </td>
            </tr>

        }
    </tbody>
</table>
<script>
$(document).ready(function() {
    $('#main').DataTable({
        "language":
datatables_lang, "pageLength":3

    } );
} );
</script>


