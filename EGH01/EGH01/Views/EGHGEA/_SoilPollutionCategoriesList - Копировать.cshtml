@using EGH01.Core;
@using EGH01.Models.EGH;
@using EGH01DB.Primitives;
@using EGH01DB.Types;
@using EGH01DB.Objects;
@model List<SoilPollutionCategories>
@{
    Menu menu = new Menu(
                            new Menu.MenuItem("Удалить", "SoilPollutionCategories.Delete", true),
                            new Menu.MenuItem("Изменить", "SoilPollutionCategories.Update", true)
                           );


}

<div class = "table-responsive">
    <table class= "table">
        <thead>
            <tr>
                <th> Код </th>
                    <th>Наименование </th>
                        <th>Привышение ПДК(раз) </th>
                <th>  Категория земли  </th>
                <th> Действие </th>
                </tr>
                
        </thead>

        <tbody>


@foreach (SoilPollutionCategories t in @Model)
{

    using (Html.BeginForm("SoilPollutionCategories", "EGHGEA"))
    {

    
        <tr>
               

                <td> @t.code.ToString()</td>
               
                    <td>@t.name</td>
                    <td>@t.min.ToString()&nbsp;-&nbsp;@t.max.ToString()&nbsp;</td>
                    <td>@t.cadastretype.name</td>
             <td>   @Html.Partial("_TypeLineMenu", menu) 
            <input type="hidden" value="@t.code.ToString()" name="id">  </td>
           
        </tr>
           
         
    }
}

            </tbody>
        </table>
    </div>

